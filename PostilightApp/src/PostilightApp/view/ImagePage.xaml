<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="PostilightApp.view.ImagePage">
   <ContentPage.Content>
    
           <Grid BackgroundColor="Aqua">
                           <Grid.RowDefinitions>
                              <RowDefinition Height="0.3*" />
                              <RowDefinition Height="0.3*" />
                              <RowDefinition Height="0.3*" />
                              <RowDefinition Height="0.1*" />
                           </Grid.RowDefinitions>
                           <Grid.ColumnDefinitions>
                              <ColumnDefinition Width="*" />                              
                           </Grid.ColumnDefinitions>

         <Image x:Name="image"  Grid.Row="0" Grid.Column="0"  VerticalOptions="FillAndExpand" Aspect="AspectFit" />

               

         <Image x:Name="pixelated" Grid.Row="1" Grid.Column="0" VerticalOptions="FillAndExpand" Aspect="AspectFit" />
               <ActivityIndicator x:Name="activityIndicator" Grid.Row="1" Grid.Column="0" IsRunning="True">
                  <ActivityIndicator.WidthRequest>
                     <OnPlatform x:TypeArguments="x:Double"
                                 Android="40"
                                 iOS="40"
                                 WinPhone="100" />
                  </ActivityIndicator.WidthRequest>
               </ActivityIndicator>
        
         <Button Text="Pixelate" Grid.Row="3" Grid.Column="0" Clicked="Pixelate_Button_Clicked"/>
      </Grid>
   </ContentPage.Content>
</ContentPage>

