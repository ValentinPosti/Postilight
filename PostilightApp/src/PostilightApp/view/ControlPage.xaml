<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="PostilightApp.view.ControlPage">
   <ContentPage.Content>
       <StackLayout Orientation="Vertical">
          <StackLayout Orientation="Horizontal"
                    HeightRequest="60"
                    HorizontalOptions="Fill"
                    VerticalOptions="Start" >

      <Button Text="-" HorizontalOptions="FillAndExpand" Clicked="Minus_Button_Clicked"/>
      <Button Text="Delete" HorizontalOptions="FillAndExpand" Clicked="Delete_Button_Clicked"/>
      <Button Text="+" HorizontalOptions="FillAndExpand" Clicked="Plus_Button_Clicked"/>
     
      </StackLayout>
          <Label Text="Look at your lamp to browse content." HorizontalTextAlignment="Center"/>
          <Label Text="Press delete to remove the currently displayed text or image from your lamp." HorizontalTextAlignment="Center"/>
       </StackLayout>
   </ContentPage.Content>  
</ContentPage>

